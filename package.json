{
  "name": "tggl-core",
  "version": "1.3.0",
  "description": "Tggl Typescript core for evaluating flags",
  "keywords": [
    "Tggl",
    "Feature flag",
    "Feature toggle",
    "A/B testing",
    "Remote config",
    "Kill switch"
  ],
  "author": "Nicolas Keller",
  "license": "ISC",
  "homepage": "https://tggl.io/",
  "repository": "https://github.com/Tggl/tggl-core",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write src/.",
    "test": "jest",
    "buildStandardTests": "ts-node src/tests/generator/generateStandardTests.ts && prettier --write src/tests/standard_tests.json",
    "prepublishOnly": "npm run buildStandardTests && npm test && rm -rf lib && npm run build",
    "prepare": "husky install && npm run build",
    "preversion": "npm run buildStandardTests && npm test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node-fetch": "^2.5.10",
    "@types/ua-parser-js": "^0.7.36",
    "@types/xxhashjs": "^0.2.2",
    "husky": "^6.0.0",
    "jest": "^29.3.1",
    "lint-staged": "^11.0.0",
    "prettier": "2.3.0",
    "ts-jest": "^29.0.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.2.4"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "xxhashjs": "^0.2.2"
  }
}
